
# .env.template â€“ Vagrant LAN static IP setup with explicit mapping

# VM_MAPPING: Comma-separated list of hostname:IP pairs for each VM
VM_MAPPING=node1:192.168.0.101,node2:192.168.0.102

# VM_BOX: Vagrant box name (e.g., generic/ubuntu2204)
VM_BOX=generic/ubuntu2204

# VM_MEMORY: RAM allocated to each VM (in MB)
VM_MEMORY=2048

# VM_CPUS: Number of CPUs allocated to each VM
VM_CPUS=2

# VM_USER: Username to create in each VM
VM_USER=admin

# VM_PASS: Password for the created user
VM_PASS=admin

# BRIDGE_IF: Host network interface to bridge for VM LAN access (e.g., eno1)
BRIDGE_IF=eth0
